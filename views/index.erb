<section class="relative mx-auto flex max-w-7xl flex-col items-center px-4 pt-32 text-center sm:px-6 lg:px-8">
  <div class="mx-auto max-w-2xl lg:max-w-none">
    <h2 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl lg:text-6xl">Sign-in Service Sample Client</h2>
    <% if @current_user %>
      <p class="mx-auto mt-4 max-w-xl text-xl text-gray-600">View user profile</p>
      <a href="/profile" class="mt-6 inline-block w-full rounded-md border border-transparent bg-[#4a77b4] px-6 py-2 font-medium text-white hover:bg-gray-800 sm:w-auto">Profile</a>
    <% else %>
      <p class="mx-auto mt-4 max-w-xl text-xl text-gray-600">Sign in to view a user profile</p>
      <a href="/sign_in" class="mt-6 inline-block w-full rounded-md border border-transparent bg-[#4a77b4] px-6 py-2 font-medium text-white hover:bg-blue-800 sm:w-auto">Sign in</a>
    <% end %>
  </div>
</section>
