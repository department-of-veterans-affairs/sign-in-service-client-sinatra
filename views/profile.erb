<div class="grid grid-cols-2 gap-4">
  <div class="overflow-hidden bg-white shadow sm:rounded-lg">
    <div class="px-4 sm:px-0">
      <h3 class="text-base font-semibold leading-7 text-gray-900">User Information</h3>
      <p class="mt-1 max-w-2xl text-sm leading-6 text-gray-500">From the introspect endpoint</p>
    </div>
    <div class="mt-6 border-t border-gray-100">
      <dl class="divide-y divide-gray-100">
        <% @user_info.each_with_index do |item, index| %>
          <div class="<%= index.even? ? 'bg-white' : 'bg-gray-50' %> px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-3">
            <dt class="text-sm font-medium leading-6 text-gray-900"><%= item[:label] %></dt>
            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"><%= item[:value] %></dd>
          </div>
        <% end %>
      </dl>
    </div>
  </div>
  <div class="overflow-hidden bg-white shadow sm:rounded-lg">
    <div class="px-4 sm:px-0">
      <h3 class="text-base font-semibold leading-7 text-gray-900">Session Information</h3>
    </div>
    <div class="mt-6 border-t border-gray-100">
      <dl class="divide-y divide-gray-100">
        <div class="bg-white px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-3">
          <dt class="text-sm font-medium leading-6 text-gray-900">Auth Type</dt>
          <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"><%= @auth_type %></dd>
        </div>
        <div class="bg-gray-50 px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-3">
          <dt class="text-sm font-medium leading-6 text-gray-900">Access Token Expiration</dt>
          <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"><%= @access_token_expiration %></dd>
        </div>
        <% if cookie_auth? %>
          <div class="bg-white px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-3">
            <dt class="text-sm font-medium leading-6 text-gray-900">Refresh Token Expiration</dt>
            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"> <%=@refresh_token_expiration  %></dd>
          </div>
        <% end %>
      </dl>
    </div>
  </div>
</div>
